<div class="container">
  <h1>餐廳前台</h1>
    <div >
      <ul class="nav nav-pills nav-pills-center">
        <li role="presentation" class="active"><%= link_to "全部餐廳", root_path %></li>
        <% @categories.each do |category| %>
        <li role="prsentation"><%= link_to category.name, category_path(category) %></li>
        <% end %>
      </ul>
    </div>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-sm-6 col-md-4">
      <div class="restaurant-item">
        <%= image_tag restaurant.image, class: "img-responsive center-block" %> 
        <div class="caption">
          <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>   
          <p class="lable lable-default"><%= restaurant.category.name %></p>
          <p><%= truncate(restaurant.description, length: 80) %></p>
        </div>
      </div>

    </div>
    <% end %>

    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
  
    
  </div>
  

</div>



